<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	android:layout_width="wrap_content" 
	android:id="@+id/mainView"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="top">

	<android.opengl.GLSurfaceView 
		android:id="@+id/cloudView"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_alignParentTop="true" android:keepScreenOn="true"/>
		<RelativeLayout 
			android:layout_width="wrap_content" 
			android:id="@+id/mainView"
			android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="bottom|right">
			<ListView
				android:id="@+id/wordListView" 
				android:background="#00000000"
				android:cacheColorHint="#00000000"
				android:layout_alignParentRight="true" 
				android:layout_alignParentBottom="true"
				android:textColor="@android:color/transparent"
				android:layout_width="200dp" 
				android:layout_height="200dp"
				android:focusable="false" 
				android:stackFromBottom="false"
				android:drawable="@android:color/transparent" 
				android:focusableInTouchMode="false">
				</ListView>
	</RelativeLayout>
</RelativeLayout>
